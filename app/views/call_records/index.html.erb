<p id="notice"><%= notice %></p>

<h1>Listing Call Records</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @call_records.each do |call_record| %>
      <tr>
        <td><%= call_record.content %></td>
        <td><%= call_record.user_id %></td>
        <td><%= link_to 'Show', call_record %></td>
        <td><%= link_to 'Edit', edit_call_record_path(call_record) %></td>
        <td><%= link_to 'Destroy', call_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Submit new call', new_call_record_path %>
